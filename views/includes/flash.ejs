<% if(success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-8 offset-2">
        <h4><%= success %></h4>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    
<% } %>
<% if(error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-8 offset-2">
        <h4><%= error %></h4>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    
<% } %>
